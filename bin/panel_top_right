#!/bin/bash

. panel_colors

PANEL_FIFO=/tmp/panel-top-right
PANEL_HEIGHT=30
PANEL_WIDTH=500
XOFF=1410
YOFF=10
PANEL_FONT_FAMILY="FuraCode Nerd Font:size=12"
# export PANEL_FIFO PANEL_HEIGHT PANEL_FONT_FAMILY

# setup
if [ $(pgrep -cx panel-desktop) -gt 1 ] ; then
  printf "%s\n" "The panel is already running." >&2
  exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

#xtitle -sf 'T%s\n' -t 20 > "$PANEL_FIFO" &
bspc config top_padding $PANEL_HEIGHT

# battery
while true;
do
    BATTERY=$(cat /sys/class/power_supply/BAT0/capacity)
    STATUS=$(cat /sys/class/power_supply/BAT0/status)
    if [[ "$STATUS" == "Discharging" ]]
    then
        if [ $BATTERY -ge 80 ]
        then
            icon_battery='\uf240'
        fi

        if [ $BATTERY -ge 50 -a $BATTERY -lt 80 ]
        then
            icon_battery='\uf241'
        fi

        if [ $BATTERY -ge 30 -a $BATTERY -lt 50 ]
        then
            icon_battery='\uf242'
        fi

        if [ $BATTERY -gt 10 -a $BATTERY -lt 30 ]
        then
            icon_battery='\uf243'
        fi

        if [ $BATTERY -lt 10 ]
        then
            icon_battery='\uf244'
        fi
        echo -e "B%{F$COLOR_ICONS}$icon_battery%{F-} $BATTERY%"
        sleep 30;
    else
        if [[ -f /tmp/.battery.charging ]]
        then
            N=$(cat /tmp/.battery.charging)
            if [[ $N -eq 1 ]]
            then
                charging_icon='\uf243'
                echo 2 > /tmp/.battery.charging
            elif [[ $N -eq 2 ]]
            then
                charging_icon='\uf242'
                echo 3 > /tmp/.battery.charging
            elif [[ $N -eq 3 ]]
            then
                charging_icon='\uf241'
                echo 4 > /tmp/.battery.charging
            else 
                charging_icon='\uf240'
                echo 1 > /tmp/.battery.charging
            fi
        else
            charging_icon='\uf240'
            echo 1 > /tmp/.battery.charging
        fi
        echo -e B%{F$COLOR_ICONS}$charging_icon%{F-} $BATTERY%
        sleep 1;
    fi
done > "$PANEL_FIFO" &

# wifi
while true;
do
WIFI_SSID=$(iw wlp2s0 link | grep 'SSID' | sed 's/SSID: //' | sed 's/\t//')
if [[ -z $WIFI_SSID ]]
then
    echo -e L"%{F$COLOR_ICONS}\uf072%{F-}"
else
    echo -e L"%{F$COLOR_ICONS}%{F-}" $WIFI_SSID  
fi
  sleep 10
done > $PANEL_FIFO &

# disk space
while true;
do
  DIR=$(df -hlP /home | grep void | sed 's/ \+/ /g' | cut -d' ' -f6)
  FREE_SPACE=$(df -hlP /home | grep void | sed 's/ \+/ /g' | cut -d' ' -f4)
  echo -e F"%{F$COLOR_ICONS}%{F-}" $FREE_SPACE
  sleep 10
done > $PANEL_FIFO &

cat "$PANEL_FIFO" | panel_bar_top_right | lemonbar -g ${PANEL_WIDTH}x$PANEL_HEIGHT+$XOFF+$YOFF -f "$PANEL_FONT_FAMILY" -F "$COLOR_FOREGROUND" -u 2 | bash &

wait

